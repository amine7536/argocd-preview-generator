apiVersion: argoproj.io/v1alpha1
kind: Application
metadata:
  name: {{ quote .Name }}
  namespace: argocd
  annotations:
    argocd.argoproj.io/sync-wave: "{{ .SyncWave }}"
  finalizers:
    - resources-finalizer.argocd.argoproj.io
spec:
  project: {{ quote .Slug }}
  source:
    repoURL: "https://github.com/amine7536/akpe-{{ .ServiceName }}.git"
    targetRevision: {{ if .ImageTag }}{{ .ImageTag }}{{ else }}main{{ end }}
    path: k8s/
    helm:
      parameters:
        - name: image.tag
          value: {{ if .ImageTag }}{{ quote .ImageTag }}{{ else }}"$ARGOCD_APP_REVISION"{{ end }}
{{- range .HelmParams }}
        - name: {{ .Name }}
          value: {{ quote .Value }}
{{- end }}
  destination:
    server: https://kubernetes.default.svc
    namespace: {{ quote .Slug }}
  syncPolicy:
    automated:
      prune: true
      selfHeal: true
---
