apiVersion: argoproj.io/v1alpha1
kind: Application
metadata:
  name: {{ quote .Name }}
  namespace: argocd
  annotations:
    argocd.argoproj.io/sync-wave: "{{ .SyncWave }}"
  finalizers:
    - resources-finalizer.argocd.argoproj.io
spec:
  project: {{ quote .Slug }}
  source:
    repoURL: {{ quote .RepoURL }}
    chart: {{ quote .Chart }}
    targetRevision: {{ quote .TargetRevision }}
    helm:
      valuesObject:
{{ .ValuesYAML }}
  destination:
    server: https://kubernetes.default.svc
    namespace: {{ quote .Namespace }}
  syncPolicy:
    automated:
      prune: true
      selfHeal: true
    retry:
      limit: 5
      backoff:
        duration: 10s
        factor: 2
        maxDuration: 3m
---
